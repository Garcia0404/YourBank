---
import FeaturesCard from "../components/FeaturesCard.astro";
import ProductsCard from "../components/ProductsCard.astro";
import FAQCard from "../components/FAQCard.astro";
import Layout from "../layouts/Layout.astro";
import TestimonialsCard from "../components/TestimonialsCard.astro";
---

<Layout title="YourBank">
  <img
    src="/homepage-points.svg"
    alt="points"
    height="40px"
    width="auto"
    class="absolute top-[-20px] left-[-20px]"
  />
  <main
    class="text-white text-3xl grid lg:grid-cols-2 py-12 lg:py-24 mobile:gap-4 lg:gap-0 max-w-7xl mx-auto px-5"
  >
    <div>
      <div class="flex flex-col gap-3 items-center sm:items-start">
        <span
          class="flex text-2xl items-center gap-2 bg-gray/15 rounded-full max-w-max py-2 px-4"
        >
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M8.60288 3.79876C9.42705 2.85093 10.6433 2.25 12 2.25C13.3566 2.25 14.5728 2.85087 15.397 3.79861C16.6501 3.71106 17.9352 4.14616 18.8946 5.10557C19.854 6.06498 20.2891 7.35009 20.2016 8.60319C21.1492 9.42735 21.75 10.6435 21.75 12C21.75 13.3568 21.149 14.5731 20.2011 15.3973C20.2884 16.6502 19.8533 17.935 18.8941 18.8943C17.9348 19.8535 16.65 20.2886 15.3971 20.2013C14.5729 21.1491 13.3567 21.75 12 21.75C10.6434 21.75 9.4272 21.1491 8.60304 20.2014C7.34992 20.289 6.0648 19.8539 5.10537 18.8945C4.14596 17.935 3.71086 16.6499 3.79841 15.3968C2.85079 14.5726 2.25 13.3565 2.25 12C2.25 10.6434 2.85085 9.42723 3.79855 8.60306C3.7111 7.35005 4.14621 6.06507 5.10554 5.10574C6.06488 4.1464 7.34987 3.71129 8.60288 3.79876ZM15.6103 10.1859C15.8511 9.84887 15.773 9.38046 15.4359 9.1397C15.0989 8.89894 14.6305 8.97701 14.3897 9.31407L11.1543 13.8436L9.53033 12.2197C9.23744 11.9268 8.76256 11.9268 8.46967 12.2197C8.17678 12.5126 8.17678 12.9874 8.46967 13.2803L10.7197 15.5303C10.8756 15.6862 11.0921 15.7656 11.3119 15.7474C11.5316 15.7293 11.7322 15.6153 11.8603 15.4359L15.6103 10.1859Z"
              fill="#CAFF33"></path>
          </svg>
          <span class="text-white text-sm"
            >No LLC Required, No Credit Check.</span
          >
        </span>
        <div class="flex flex-col gap-3 text-center sm:text-start">
          <h1 class="text-3xl mobile:text-4xl font-medium text-balance">
            <span class="leading-10 sm:leading-[50px]"
              >Welcome to YourBank Empowering Your</span
            >
            <span class="text-green/60">Financial Journey</span>
          </h1>
          <p class="text-lg font-light text-pretty leading-6">
            At YourBank, our mission is to provide comprehensive banking
            solutions that empower individuals and businesses to achieve their
            financial goals. We are committed to delivering personalized and
            innovative services that prioritize our customers' needs.
          </p>
        </div>
        <div class="pt-10">
          <button
            class="bg-green/60 px-6 py-3.5 rounded-full text-lg text-gray/11 font-normal"
            >Open Account</button
          >
        </div>
      </div>
    </div>
    <div class="relative overflow-hidden">
      <img src="/arrows.svg" class="absolute top-8 right-0 z-0" alt="arrows" />
      <img
        class="z-10 mx-auto"
        src="/yourTransactions.svg"
        alt="your_transactions"
      />
    </div>
  </main>
  <section class="grid gap-16 lg:gap-24 mb-12 lg:mb-24 max-w-7xl mx-auto px-5">
    <div
      class="flex flex-col lg:flex-row gap-6 lg:gap-32 items-center sm:items-start"
    >
      <div class="text-center sm:text-start">
        <h2 class="text-3xl mobile:text-4xl font-medium text-balance mb-3">
          <span>Our</span>
          <span class="text-green/60">Products</span>
        </h2>
        <p>
          Discover a range of comprehensive and customizable banking products at
          YourBank, designed to suit your unique financial needs and aspirations
        </p>
      </div>
      <div
        class="bg-gray/11 border border-gray/15 rounded-full p-3 flex h-min mt-auto w-max"
      >
        <button
          class="bg-green/60 px-3 mobile:px-5 py-2 rounded-full sm:text-lg text-gray/11 font-normal whitespace-nowrap"
          >For Individuals</button
        >
        <button
          class="px-3 mobile:px-5 py-2 rounded-full sm:text-lg font-normal whitespace-nowrap"
          >For Businesses</button
        >
      </div>
    </div>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-10">
      <ProductsCard
        svg="checkingAccounts"
        title="Checking Accounts"
        description="Enjoy easy and convenient access to your funds with our range of checking account options. Benefit from features such as online and mobile banking, debit cards, and free ATM access."
      />
      <ProductsCard
        svg="savingsAccounts"
        title="Savings Accounts"
        description="Build your savings with our competitive interest rates and flexible savings account options. Whether you're saving for a specific goal or want to grow your wealth over time, we have the right account for you."
      />
      <ProductsCard
        svg="loans_Mortgages"
        title="Loans and Mortgages"
        description="Realize your dreams with our flexible loan and mortgage options. From personal loans to home mortgages, our experienced loan officers are here to guide you through the application process and help you secure the funds you need."
      />
    </div>
  </section>
  <section class="mb-12 lg:mb-24 max-w-7xl mx-auto px-5">
    <div class="mb-20 text-center sm:text-start">
      <h2
        class="text-3xl mobile:text-4xl font-medium text-balance mb-3 text-green/60"
      >
        Use Cases
      </h2>
      <p>
        At YourBank, we cater to the diverse needs of individuals and businesses
        alike, offering a wide range of financial solutions.
      </p>
    </div>
    <div class="grid gap-5 sm:gap-12">
      <div
        class="grid md:grid-cols-2 items-center gap-5 sm:gap-12 lg:gap-20 text-center md:text-start"
      >
        <img src="/useCases/forIndividuals.svg" alt="forIndividuals" />
        <div class="py-4">
          <h3 class="text-2xl mb-3">For Individuals</h3>
          <p>
            For individuals, our mortgage services pave the way to
            homeownership, and our flexible personal loans provide vital support
            during various life milestones. We also prioritize retirement
            planning, ensuring a financially secure future for our customers.
          </p>
          <img
            class="my-5 xl:my-9"
            src="/useCases/individuals.svg"
            alt="individuals"
          />
          <button
            class="bg-gray/11 border border-gray/15 py-3 px-5 rounded-full"
            >Learn More</button
          >
        </div>
      </div>
      <div
        class="grid md:grid-cols-2 items-center gap-5 sm:gap-12 lg:gap-20 text-center md:text-start"
      >
        <div class="py-4">
          <h3 class="text-2xl mb-3">For Business</h3>
          <p>
            For businesses, we empower growth with working capital solutions
            that optimize cash flow, and our tailored financing options fuel
            business expansion. Whatever your financial aspirations, YourBank is
            committed to providing the right tools and support to achieve them.
          </p>
          <img
            class="my-5 xl:my-9"
            src="/useCases/business.svg"
            alt="business"
          />
          <button
            class="bg-gray/11 border border-gray/15 py-3 px-5 rounded-full"
            >Learn More</button
          >
        </div>
        <img src="/useCases/forBusiness.svg" alt="forBusiness" />
      </div>
    </div>
  </section>
  <section class="mb-12 lg:mb-24 max-w-7xl mx-auto px-5">
    <div class="mb-12 lg:mb-20 text-center sm:text-start">
      <h2 class="text-3xl mobile:text-4xl font-medium text-balance mb-3">
        <span>Our</span>
        <span class="text-green/60">Features</span>
      </h2>
      <p>
        Experience a host of powerful features at YourBank, including seamless
        online banking, secure transactions, and personalized financial
        insights, all designed to enhance your banking experience.
      </p>
    </div>
    <div class="flex flex-col lg:flex-row gap-5">
      <div
        class="bg-gray/11 flex lg:flex-col p-4 lg:p-10 gap-3.5 rounded-xl h-max overflow-x-auto lg:overflow-x-clip lg:w-auto"
      >
        <button
          class="bg-gray/10 py-3 ps-5 pe-5 lg:pe-10 border border-gray/15 rounded-full text-green/60 whitespace-nowrap"
          >Online Banking</button
        >
        <button
          class="border border-gray/15 rounded-full bg-gray/11 py-3 ps-5 pe-5 lg:pe-0 text-start whitespace-nowrap"
          >Financial Tools</button
        >
        <button
          class="border border-gray/15 rounded-full bg-gray/11 py-3 ps-5 pe-5 lg:pe-0 text-start whitespace-nowrap"
          >Customer Suport</button
        >
      </div>
      <div class="grid md:grid-cols-2 gap-5">
        <FeaturesCard
          title="24/7 Account Access"
          content="Enjoy the convenience of accessing your accounts anytime, anywhere through our secure online banking platform. Check balances, transfer funds, and pay bills with ease."
        />
        <FeaturesCard
          title="Mobile Banking App"
          content="Stay connected to your finances on the go with our user-friendly mobile banking app. Easily manage your accounts, deposit checks, and make payments from your smartphone or tablet."
        />
        <FeaturesCard
          title="Secure Transactions"
          content="Rest assured knowing that your transactions are protected by industry-leading security measures. We employ encryption and multi-factor authentication to safeguard your financial information."
        />
        <FeaturesCard
          title="Bill Pay and Transfers"
          content="Save time and avoid late fees with our convenient bill pay service. Set up recurring payments or make one-time transfers between your accounts with just a few clicks."
        />
      </div>
    </div>
  </section>
  <section class="mb-12 lg:mb-24 max-w-7xl mx-auto px-5">
    <div class="mb-12 lg:mb-20 text-center sm:text-start">
      <h2 class="text-3xl mobile:text-4xl font-medium text-balance mb-3">
        <span class="text-green/60">Frequently</span>
        <span>Asked Questions</span>
      </h2>
      <p>
        Still you have any questions? Contact our Team via support@yourbank.com.
      </p>
    </div>
    <div class="grid md:grid-cols-2 gap-5 faq relative">
      <FAQCard
        title="How do I open an account with YourBank?"
        description='Opening an account with YourBank is easy. Simply visit our website and click on the "Open an Account" button. Follow the prompts, provide the required information, and complete the application process. If you have any questions or need assistance, our customer support team is available to help.'
      />
      <FAQCard
        title="What documents do I need to provide to apply for a loan?"
        description="The documents required for a loan application may vary depending on the type of loan you are applying for. Generally, you will need to provide identification documents (such as a passport or driver's license), proof of income (such as pay stubs or tax returns), and information about the collateral (if applicable). Our loan officers will guide you through the specific requirements during the application process."
      />
      <FAQCard
        title="How can I access my accounts online?"
        description={`Accessing your accounts online is simple and secure. Visit our website and click on the "Login" button. Enter your username and password to access your accounts. If you haven't registered for online banking, click on the "Enroll Now" button and follow the registration process. If you need assistance, our customer support team is available to guide you.`}
      />
      <FAQCard
        title="Are my transactions and personal information secure?"
        description="At YourBank, we prioritize the security of your transactions and personal information. We employ industry-leading encryption and multi-factor authentication to ensure that your data is protected. Additionally, we regularly update our security measures to stay ahead of emerging threats. You can bank with confidence knowing that we have robust security systems in place."
      />
    </div>
    <button
      class="flex bg-gray/11 py-3 px-5 border border-gray/15 items-center rounded-full gap-2 mx-auto"
      >Load All FAQ's
      <svg
        width="14"
        height="8"
        viewBox="0 0 14 8"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path d="M12.5 0.75L7 6.25L1.5 0.75" stroke="white" stroke-width="2"
        ></path>
      </svg>
    </button>
  </section>
  <section class="mb-12 lg:mb-24 max-w-7xl mx-auto px-5">
    <div
      class="flex mb-12 lg:mg-24 flex-col lg:flex-row gap-6 lg:gap-32 items-center lg:mb-20 sm:items-start"
    >
      <div class="text-center sm:text-start">
        <h2 class="text-3xl mobile:text-4xl font-medium text-balance mb-3">
          <span>Our</span>
          <span class="text-green/60">Testimonials</span>
        </h2>
        <p>
          Discover how YourBank has transformed lives with innovative digital
          solutions and personalized customer service. See why our clients trust
          us for a secure and prosperous financial journey.
        </p>
      </div>
      <div
        class="bg-gray/11 border border-gray/15 rounded-full p-3 flex h-min w-max my-auto"
      >
        <button
          class="bg-green/60 px-3 mobile:px-5 py-2 rounded-full sm:text-lg text-gray/11 font-normal whitespace-nowrap"
          >For Individuals</button
        >
        <button
          class="px-3 mobile:px-5 py-2 rounded-full sm:text-lg font-normal whitespace-nowrap"
          >For Businesses</button
        >
      </div>
    </div>
    <div class="relative">
      <button class="hidden lg:block absolute left-0 top-1/2 -translate-y-1/2 z-10">
        <svg
          width="62"
          height="62"
          viewBox="0 0 62 62"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <rect x="0.5" y="0.5" width="61" height="61" rx="30.5" fill="#1C1C1C"
          ></rect>
          <rect
            x="0.5"
            y="0.5"
            width="61"
            height="61"
            rx="30.5"
            stroke="#262626"></rect>
          <path
            d="M40.2083 31H22.5M22.5 31L31 22.5M22.5 31L31 39.5"
            stroke="#CAFF33"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </button>
      <div
        class="grid lg:grid-cols-3 gap-4 testimonials relative md:px-16"
      >
        <TestimonialsCard
          hidden={true}
          nam="Sara T"
          description="YourBank has been my trusted financial partner for years. Their personalized service and innovative digital banking solutions have made managing my finances a breeze."
        />
        <TestimonialsCard
          hidden={false}
          nam="John D"
          description="I recently started my own business, and YourBank has been instrumental in helping me set up my business accounts and secure the financing I needed. Their expert guidance and tailored solutions have been invaluable."
        />
        <TestimonialsCard
          hidden={true}
          nam="Emily G"
          description="I love the convenience of YourBank's mobile banking app. It allows me to stay on top of my finances and make transactions on the go. The app is user-friendly and secure, giving me peace of mind."
        />
      </div>
      <button class="hidden lg:block absolute right-0 top-1/2 z-10 -translate-y-1/2">
        <svg
          width="62"
          height="62"
          viewBox="0 0 62 62"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <rect x="0.5" y="0.5" width="61" height="61" rx="30.5" fill="#1C1C1C"
          ></rect>
          <rect x="0.5" y="0.5" width="61" height="61" rx="30.5" stroke="#262626"
          ></rect>
          <path
            d="M22.5002 31H40.2085M40.2085 31L31.7085 22.5M40.2085 31L31.7085 39.5"
            stroke="#CAFF33"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </button>
      <div class="flex gap-4 justify-center mt-8 lg:hidden">
        <button class="">
          <svg
            width="62"
            height="62"
            viewBox="0 0 62 62"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <rect x="0.5" y="0.5" width="61" height="61" rx="30.5" fill="#1C1C1C"
            ></rect>
            <rect
              x="0.5"
              y="0.5"
              width="61"
              height="61"
              rx="30.5"
              stroke="#262626"></rect>
            <path
              d="M40.2083 31H22.5M22.5 31L31 22.5M22.5 31L31 39.5"
              stroke="#CAFF33"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </button>
        <button class="">
          <svg
            width="62"
            height="62"
            viewBox="0 0 62 62"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <rect x="0.5" y="0.5" width="61" height="61" rx="30.5" fill="#1C1C1C"
            ></rect>
            <rect x="0.5" y="0.5" width="61" height="61" rx="30.5" stroke="#262626"
            ></rect>
            <path
              d="M22.5002 31H40.2085M40.2085 31L31.7085 22.5M40.2085 31L31.7085 39.5"
              stroke="#CAFF33"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </button>
      </div>
    </div>
  </section>
  <section class="bg-gray/11 border border-gray/15 rounded-xl mb-20 lg:mb-32 p-16 flex flex-col sm:flex-row items-center gap-8 sm:gap-20 relative max-w-7xl xl:mx-auto px-5 overflow-hidden mx-5">
    <div class='absolute top-0 left-0'>
      <img src='/points.svg' alt='points'/>
    </div>
    <div class="text-center sm:text-start">
      <h2 class="text-3xl mobile:text-4xl font-medium text-balance mb-5">
        <span>Start your financial journey with</span>
        <span class="text-green/60">YourBank today!</span>
      </h2>
      <p>
        Ready to take control of your finances? Join YourBank now, and let us help you achieve your financial goals with our tailored solutions and exceptional customer service.
      </p>
    </div>
    <button class="bg-green/60 px-3 mobile:px-6 py-4 rounded-full sm:text-lg text-gray/11 font-normal whitespace-nowrap h-min">Open Account</button>
  </section>
  <style>
    .faq::after {
      content: "";
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 300px;
      background: linear-gradient(
        to top,
        rgb(25, 25, 25),
        rgba(25, 25, 25, 0.2)
      );
    }
    .testimonials::after {
      position: absolute;
      top: 0;
      left: 0;
      width: 300px;
      height: 100%;
      background: linear-gradient(
        to right,
        rgb(25, 25, 25),
        rgba(25, 25, 25, 0.2)
      );
    }
    @media (width>750px) {
      .testimonials::after {
        content: "";
      }
      .testimonials::before {
        content: '';
      }
    }
    .testimonials::before {
      position: absolute;
      top: 0;
      right: 0;
      width: 300px;
      height: 100%;
      background: linear-gradient(
        to left,
        rgb(25, 25, 25),
        rgba(25, 25, 25, 0.2)
      );
    }
  </style>
</Layout>
