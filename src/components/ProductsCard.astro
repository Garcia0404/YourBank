---
interface Props{
  svg:string
  title:string
  description:string
}
const {svg,title,description} = Astro.props as Props
---
<article class="flex flex-col gap-4 items-center">
  <img height="auto" width="90px" src={`/products/${svg}.svg`} alt={title}>
  <h3 class="text-2xl">{title}</h3>
  <p class="text-pretty text-center text-gray/70">{description}</p>
</article>
