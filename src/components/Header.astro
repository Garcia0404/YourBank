---
import { NavMobileButton } from './NavMobileButton'

interface Props {
  page:string
}
const { page='none' } = Astro.props as Props
---

<header class="flex items-center bg-gray/11 z-50 rounded-full justify-between px-6 py-3 text-lg border border-gray/15 max-w-7xl mx-5 xl:mx-auto">
  <span transition:persist>
    <img src="/logo.svg" alt="logo">
  </span>
  <nav class="hidden lg:flex">
    <ul class="list-none flex items-center">
      <li><a class:list={[
        "",
        {
          "bg-gray/15 px-6 py-2 rounded-full block w-full":(page=='YourBank'),
          "px-6":!(page=='YourBank')
        }
      ]} href="/">Home</a></li>
      <li><a class:list={[
        "",
        {
          "bg-gray/15 px-6 py-2 rounded-full block w-full":(page=='Careers'),
          "px-6":!(page=='Careers')
        }
      ]} href="/careers">Careers</a></li>
      <li><a class:list={[
        "",
        {
          "bg-gray/15 px-6 py-2 rounded-full block w-full":(page=='About'),
          "px-6":!(page=='About')
        }
      ]} href="/about">About</a></li>
      <li><a class:list={[
        "",
        {
          "bg-gray/15 px-6 py-2 rounded-full block w-full":(page=='Security'),
          "px-6":!(page=='Security')
        }
      ]} href="/security">Security</a></li>
    </ul>
  </nav>
  <span class="gap-7 items-center hidden sm:flex">
    <a href="/signUp">Sign Up</a>
    <a href="/login" class="bg-green/60 text-gray/11 px-6 py-2 rounded-full">Login</a>
  </span>
  <NavMobileButton client:visible/>
</header>
