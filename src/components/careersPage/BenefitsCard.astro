---
interface Props {
  svg:string
  title:string
}
const { svg,title } = Astro.props as Props
---

<article class="rounded-tr-[32px] rounded-b-xl px-5 py-7 lg:p-10 grid gap-5 bg-[url('/bg-imageCard.svg')]">
  <div class="flex items-center gap-3">
    <img src={`${svg}.svg`} alt="title">
    <h3 class="text-2xl">{title}</h3>
  </div>
  <p><slot/></p>
</article>

