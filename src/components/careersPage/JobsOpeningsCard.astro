---
interface Props {
  job: string;
  departament: string;
  requirements: string[];
}
const { job, departament, requirements } = Astro.props as Props;
---

<article class="border border-gray/15 p-5 md:p-9 rounded-2xl bg-gray/11 flex flex-col">
  <h3 class="text-2xl font-semibold">{job}</h3>
  <div class="flex flex-col md:flex-row gap-2 mb-6 mt-3 text-[13px] mobile:text-base">
    <span class="bg-gray/10 border text-gray/70 border-gray/15 py-2 px-4 rounded-full w-max whitespace-nowrap"
      >Location: India</span
    >
    <span class="bg-gray/10 border text-gray/70 border-gray/15 py-2 px-4 rounded-full w-max whitespace-nowrap"
      >Departament: {departament}</span
    >
  </div>
  <div class="mb-6">
    <h4 class="text-xl font-semibold mb-2">About This Job</h4>
    <p>
      <slot />
    </p>
  </div>
  <div>
    <h4 class="text-xl font-medium">Requirements & Qualifications</h4>
    <ul class="mt-3 mb-7 grid gap-2 font-light">
      {
        requirements.map((requirement) => (
          <li class="flex gap-3 items-center">
            <span>
              <svg
                width="20"
                height="20"
                viewBox="0 0 20 20"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M8.75311 12.4596C8.19157 12.4596 7.86263 12.1435 7.86263 11.5762V10.9198C5.5041 10.7577 3.1536 10.2714 0.714844 9.33941V8.00224C3.71515 9.33132 6.72348 9.80138 9.99655 9.80138C13.2777 9.80138 16.286 9.33132 19.2863 8.00224V9.33941C16.8475 10.2714 14.497 10.7577 12.1385 10.9198V11.5762C12.1385 12.1435 11.8095 12.4596 11.248 12.4596H8.75311ZM3.19371 17.8489H16.8074C18.468 17.8489 19.2863 17.0386 19.2863 15.3771V7.49167C19.2863 5.83028 18.468 5.01985 16.8074 5.01985H3.19371C1.54113 5.01985 0.714844 5.83028 0.714844 7.49167V15.3771C0.714844 17.0386 1.54113 17.8489 3.19371 17.8489ZM5.92929 5.72493H7.17273V4.29047C7.17273 3.67453 7.53373 3.32605 8.15946 3.32605H11.8417C12.4674 3.32605 12.8204 3.67453 12.8204 4.29047V5.70872H14.0638V4.37962C14.0638 2.856 13.2696 2.14282 11.8176 2.14282H8.17548C6.80371 2.14282 5.92929 2.856 5.92929 4.37962V5.72493Z"
                  fill="#B3B3B3"
                />
              </svg>
            </span>
            <span>{requirement}</span>
          </li>
        ))
      }
    </ul>
  </div>
  <button class="bg-green/60 py-3 px-5 mt-auto rounded-full text-gray/10 font-medium w-max">Apply Now</button>
</article>
